{
    "license": "MIT",
    "scripts": {
        "build": "./hooks/next-build.sh",
        "prestart": "git submodule update --init --recursive --remote",
        "start": "./hooks/solidity-build.sh && cd ./frontend/ && yarn start"
    },
    "deprecated-scripts": {
        "build:debugging:setup": "git clone https://github.com/pavlovcik/uad-ui-launch.git",
        "build:debugging": "nodemon --exec hooks/restart.sh",
        "dev": "run-p watch:*",
        "predev": "run-p install:*",
        "prestart": "run-p install:*",
        "install:sol": "cd ./contracts/ && yarn install && cd ..",
        "install:ui": "cd ./frontend/ && yarn install && cd ..",
        "watch:sol": "nodemon --watch 'contracts/**/*' -e sol --exec './hooks/solidity-build.sh' --verbose",
        "watch:ui": "cd ./frontend/ && yarn dev",
        "stop": "kill $(lsof -t -i:8545) || true",
        "bendev": "# ./hooks/solidity-build.sh &&  cd ./frontend/ && yarn dev",
        "poststop": "echo 'killed hardhat daemon'",
        "postdev": "run-s stop"
    },
    "dependencies": {
        "hardhat": "^2.3.3",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*/cache/",
            "**/*/artifacts/",
            "**/*/frontend/",
            "**/*/node_modules/**/*"
        ],
        "events": {
            "config": "",
            "exit": "",
            "crash": "yarn stop",
            "restart": "clear && printf '\\033[3J'",
            "start": "clear && printf '\\033[3J'"
        }
    },
    "devDependencies": {
        "@types/node": "^15.0.2"
    }
}